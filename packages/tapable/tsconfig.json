{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "target": "es5",

    "outDir": "./dist", // 输出目录
    "lib": ["dom", "es2015"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
